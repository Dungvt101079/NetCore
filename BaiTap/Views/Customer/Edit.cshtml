@model BaiTap.Models.Customer;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Sửa thông tin</h1>
<form asp-controller="Customer" asp-action="EditbyID">
    <div>
        <label asp-for="Name" ></label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="Age"></label>
        <input asp-for="Age" />
    </div>
    <div hidden>
        <label asp-for="ID"></label>
        <input asp-for="ID" readonly />
    </div>
    <button type="submit">Save</button>
</form>
